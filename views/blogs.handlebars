<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h1>Random Stuff I Write</h1>
      </div>
    </div>
  </div>
</div>

<div class="grid">
  <div class="grid-sizer"></div>
  {{#each blogs}}
  <div class="grid-item">
    <a href="blogs/{{_id}}">
    <div class="content_square">
      <img src="{{image}}"></img>
      <h4>{{title}}</h4>
    </div>
    </a>
  </div>
  {{/each}}
</div>

<script>
    $('.grid').masonry({
        itemSelector: '.grid-item',
        columnWidth: '.grid-sizer',
        percentPosition: true
    });
</script>

<script>
  $(".grid-item")
  .mouseover(function() {
    $(this).css("background-color", "#2874A6");
  })
  .mouseout(function() {
    $(this).css("background-color", "#D6EAF8");
  });
</script>




